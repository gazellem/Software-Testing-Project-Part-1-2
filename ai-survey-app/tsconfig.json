{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "types": [
      "node",
      "@wdio/globals/types", // ✅ for $/expect/globals
      "@wdio/sync",           // ✅ if using sync (optional)
      "mocha"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./test/*"]
    }
  },
  "include": [
    "**/*.ts",
    "global.d.ts"
  ]
}
